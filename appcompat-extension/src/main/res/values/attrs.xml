<resources>
    <!-- AccountHeaderView -->
    <declare-styleable name="AccountHeaderView">
        <attr name="accountHeaderAddEnabled" format="boolean" />
        <attr name="accountHeaderManageEnabled" format="boolean" />
        <attr name="accountHeaderCheckableAccountsEnabled" format="boolean" />
    </declare-styleable>

    <!-- CircleImageView -->
    <declare-styleable name="CircleImageView">
        <attr name="circleImageEnabled" format="boolean" />
        <attr name="placeholderCircleColor" format="color" />
        <attr name="placeholderTextSize" format="dimension" />
        <attr name="placeholderTextColor" format="color" />
        <attr name="placeholderIconSize" format="dimension" />
        <attr name="placeholderIconColor" format="color" />
    </declare-styleable>

    <!-- FloatingActionMenu -->
    <declare-styleable name="FloatingActionMenu">
        <attr name="fabMenuExpandDirection" format="enum">
            <enum name="up" value="0" />
            <enum name="down" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
        <attr name="fabMenuLabelPosition" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="fabMenuLabelStyle" format="reference" />
        <attr name="fabMenuCloseIconSrc" format="reference" />
        <attr name="fabMenuCloseIconAngle" format="float" />
        <attr name="fabMenuSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="labelBackgroundColor" format="color" />
        <attr name="labelRippleColor" format="color" />
        <attr name="labelCornerRadius" format="dimension" />
        <attr name="labelElevation" format="dimension" />
        <attr name="labelPaddingHorizontal" format="dimension" />
        <attr name="labelPaddingVertical" format="dimension" />
    </declare-styleable>

    <!-- FlexibleToolbarLayout -->
    <declare-styleable name="FlexibleToolbarLayout">
        <attr name="expandedMargin" format="dimension" />
        <attr name="expandedMarginStart" format="dimension" />
        <attr name="expandedMarginTop" format="dimension" />
        <attr name="expandedMarginEnd" format="dimension" />
        <attr name="expandedMarginBottom" format="dimension" />
        <attr name="expandedGravity">
            <flag name="top" value="0x30"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="bottom" value="0x50"/>

            <!--<flag name="left" value="0x03"/>-->
            <!--<flag name="right" value="0x05"/>-->
            <!--<flag name="center_horizontal" value="0x01"/>-->
            <!--<flag name="center" value="0x11"/>-->
            <!--<flag name="start" value="0x00800003"/>-->
            <!--<flag name="end" value="0x00800005"/>-->
        </attr>

        <attr name="titleExpandedTextAppearance" format="reference" />
        <attr name="titleCollapsedTextAppearance" format="reference" />
        <attr name="subtitleExpandedTextAppearance" format="reference" />
        <attr name="subtitleCollapsedTextAppearance" format="reference" />
        <attr name="iconExpandedSize" format="dimension" />
        <attr name="iconCollapsedSize" format="dimension" />

        <attr name="titleFlexibleEnabled" format="boolean" />
        <attr name="title" />
        <attr name="subtitleFlexibleEnabled" format="boolean" />
        <attr name="subtitle" />
        <attr name="iconFlexibleEnabled" format="boolean" />
        <attr name="icon" />

        <attr name="spaceTitleSubtitle" format="dimension" />
        <attr name="spaceIconTitles" format="dimension" />

        <attr name="contentScrimColor" format="color" />
        <attr name="statusBarScrimColor" format="color" />

        <attr name="toolbarRefId" format="reference" />
    </declare-styleable>

    <!-- Common PickerDialog attributes-->
    <attr name="headerBackground" format="color" />
    <attr name="headerTextColor" format="color" />

    <!-- Material DatePickerDialog -->
    <declare-styleable name="DatePickerDialog">
        <attr name="firstDayOfWeek" format="integer" />
        <attr name="minDate" format="string" />
        <attr name="maxDate" format="string" />
        <attr name="headerBackground" />
        <attr name="headerTextColor" />
        <attr name="monthTextAppearance" format="reference" />
        <attr name="weekDayTextAppearance" format="reference" />
        <attr name="dateTextAppearance" format="reference" />
        <attr name="daySelectorColor" format="color" />
        <attr name="dayHighlightColor" format="color" />
    </declare-styleable>

    <attr name="datePickerDialogTheme" format="reference" />

    <!-- Material TimePickerDialog -->
    <declare-styleable name="TimePickerDialog">
        <attr name="headerBackground" />
        <attr name="headerTextColor" />
        <attr name="numbersTextColor" format="color" />
        <attr name="numbersInnerTextColor" format="color" />
        <attr name="numbersSelectorColor" format="color" />
        <attr name="numbersBackgroundColor" format="color" />
    </declare-styleable>

    <attr name="timePickerDialogTheme" format="reference" />
</resources>